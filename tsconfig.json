{
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "removeComments": true,
    "target": "es5",
    "baseUrl": "./src/",
    "declaration": true,
    "declarationDir": "@types",
    "paths": {
      "@/*": ["./*"],
      "*": ["*"]
    },
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ]
  }
}
